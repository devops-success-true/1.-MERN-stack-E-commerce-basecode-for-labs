server {
    listen 80;
    server_name yourdomain.com; #  shop.kastrodevops.com

    root /path/to/build; # /var/www/mern/client
    index index.html;

    location /api/ {
        proxy_pass http://127.0.0.1:5000/;
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection 'upgrade';
        proxy_set_header Host $host;
        proxy_cache_bypass $http_upgrade;
        # add_header Cache-Control "no-store, no-cache, must-revalidate, proxy-revalidate, max-age=0"; - I use for no caching during troubleshooting and deployment

    }

    location / {
        try_files $uri /index.html;
        # add_header Cache-Control "no-store, no-cache, must-revalidate, proxy-revalidate, max-age=0"; - I use for no caching during troubleshooting and deployment
    }
}